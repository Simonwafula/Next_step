[Unit]
Description=NextStep Drift Check (one-shot)
After=network.target postgresql.service

[Service]
Type=oneshot
User=nexts7595
Group=nexts7595
WorkingDirectory=/home/nextstep.co.ke/public_html/backend
EnvironmentFile=/home/nextstep.co.ke/.env
ExecStart=/home/nextstep.co.ke/.venv/bin/python -m cli drift
StandardOutput=journal
StandardError=journal
SyslogIdentifier=nextstep-drift
TimeoutStartSec=600
